# FreshTrack Server Environment Variables
# Copy to .env for local development

# ═══════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════════════════════════════
DATABASE_URL=postgresql://user:password@localhost:5432/freshtrack

# ═══════════════════════════════════════════════════════════════
# ENVIRONMENT
# ═══════════════════════════════════════════════════════════════
NODE_ENV=development
PORT=3001

# ═══════════════════════════════════════════════════════════════
# JWT & SECURITY
# ═══════════════════════════════════════════════════════════════
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ═══════════════════════════════════════════════════════════════
# CORS
# ═══════════════════════════════════════════════════════════════
CORS_ORIGINS=http://localhost:5173

# ═══════════════════════════════════════════════════════════════
# EMAIL CONFIGURATION
# ═══════════════════════════════════════════════════════════════
EMAIL_PROVIDER=resend
RESEND_API_KEY=your-resend-api-key
APP_URL=http://localhost:5173
EMAIL_FROM=FreshTrack <onboarding@resend.dev>

# ═══════════════════════════════════════════════════════════════
# SECURITY HARDENING
# ═══════════════════════════════════════════════════════════════

# MFA Configuration
MFA_ISSUER=FreshTrack
MFA_TOTP_WINDOW=1

# Export Limits
MAX_EXPORT_ROWS=10000
EXPORT_RATE_LIMIT_MAX=10
EXPORT_RATE_LIMIT_WINDOW=3600000

# IP Allowlist (comma-separated, leave empty to disable)
ALLOWED_IPS=

# Data Retention
DATA_RETENTION_YEARS=7

# GDPR
GDPR_CONTACT_EMAIL=privacy@freshtrack.systems

# Audit Verification
AUDIT_VERIFICATION_INTERVAL=21600000

# Export Limits
MAX_EXPORT_ROWS=10000
EXPORT_RATE_LIMIT_MAX=10
EXPORT_RATE_LIMIT_WINDOW=3600

# IP Allowlist (comma-separated, for production export endpoints)
# Example: ALLOWED_IPS=1.2.3.4,5.6.7.8
ALLOWED_IPS=

# GDPR Configuration
DATA_RETENTION_YEARS=7
GDPR_CONTACT_EMAIL=privacy@freshtrack.systems

# Audit Trail Integrity
AUDIT_VERIFICATION_INTERVAL=21600000

# ═══════════════════════════════════════════════════════════════
# TELEGRAM (Optional)
# ═══════════════════════════════════════════════════════════════
TELEGRAM_BOT_TOKEN=
TELEGRAM_POLLING=false

# ═══════════════════════════════════════════════════════════════
# SENTRY (Optional)
# ═══════════════════════════════════════════════════════════════
SENTRY_DSN=
