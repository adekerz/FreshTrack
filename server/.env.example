# Server Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# Server Port
PORT=3001

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Environment
NODE_ENV=production

# CORS Origins (comma-separated)
CORS_ORIGIN=https://your-frontend.vercel.app,http://localhost:5173

# App URL (for email links)
APP_URL=https://your-frontend.vercel.app

# ═══════════════════════════════════════════════════════════════
# EMAIL CONFIGURATION
# ═══════════════════════════════════════════════════════════════
# Choose provider: 'resend' (recommended), 'smtp', 'sendgrid'
EMAIL_PROVIDER=smtp
EMAIL_FROM=FreshTrack <noreply@freshtrack.app>

# Option 1: Resend (recommended, free tier: 3000 emails/month)
# Sign up at https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx

# Option 2: SMTP (Gmail, Yandex, Mail.ru, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Option 3: SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxx
